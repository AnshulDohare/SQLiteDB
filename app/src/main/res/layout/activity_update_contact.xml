<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".crud.UpdateContactActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:gravity="center"
        android:textColor="#0022FF"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="#FFF200"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:hint="Enter Name"
        android:background="@drawable/et_background"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPersonName"
        android:maxLength="25"/>

    <EditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:hint="Enter Mobile Number"
        android:background="@drawable/et_background"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="phone"
        android:maxLength="10"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:hint="Enter Email"
        android:background="@drawable/et_background"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textEmailAddress|textMultiLine"
        android:maxLength="50"/>
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:hint="Enter Address"
        android:background="@drawable/et_background"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPostalAddress|textMultiLine"
        android:maxLines="5"/>
    <EditText
        android:id="@+id/etRelation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:hint="Enter Relation"
        android:background="@drawable/et_background"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textPersonName"
        android:maxLength="25"/>

    <Button
        android:id="@+id/btnUpdateContact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Update Contact"
        android:backgroundTint="#0E6000"
        android:layout_marginTop="20dp" />

</LinearLayout>